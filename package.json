{
  "name": "webpack-bootstrap",
  "version": "0.1.5",
  "main": "bin/index.js",
  "author": "mrbone",
  "description": "Easily implement webpack for any kind of front-end app",
  "keywords": [
    "webpack",
    "react",
    "vue",
    "create-react-app",
    "create-vue-app"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mrbone/webpack-bootstrap.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.11.5"
  },
  "scripts": {
    "webpack": "webpack",
    "mocha": "mocha",
    "build:babel": "babel -d dist ./src",
    "codecov": "codecov",
    "nyc": "nyc",
    "test": "mocha src/lib/**/*.test.js --file ./test/setup.js --require babel-register --reporter dot",
    "test:coverage": "nyc yarn test",
    "codecov:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "test:watch": "yarn test --watch",
    "prepublishOnly": "yarn test:coverage && yarn build:babel",
    "commit": "git-cz",
    "release": "yarn test && standard-version"
  },
  "bin": {
    "wboot": "./dist/bin/cli.js"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "inquirer": "^5.2.0",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.3.0",
    "webpack-serve": "^0.3.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "proxyquire": "^2.0.1",
    "sinon": "^4.5.0",
    "standard-version": "^4.3.0"
  }
}
